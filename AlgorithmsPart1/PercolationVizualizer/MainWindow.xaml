<Window x:Class="PercolationVizualizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PercolationVizualizer"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Name="MainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0"
                    Orientation="Vertical">
            <Label Content="Grid size:"/>
            <TextBox Name="txtGridSize"/>

            <Label Content="Simulation count:"/>
            <TextBox Name="txtSimulationCount"/>

            <Button Name="Start"
                    Margin="0 5 0 0"
                    Click="Start_Click"
                    HorizontalAlignment="Center"
                    Content="Start Simulation"/>
        </StackPanel>
    </Grid>
</Window>
